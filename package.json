    "@types/d3-shape": "2.0.0",
    "@types/jest": "26.0.20",
    "@types/jsdom": "16.2.6",
    "@typescript-eslint/eslint-plugin": "4.15.2",
    "@typescript-eslint/parser": "4.15.2",
    "body-parser": "1.19.0",
    "codelyzer": "6.0.1",
    "compression": "1.7.4",
    "cypress": "6.5.0",
    "d3": "6.5.0",
    "dotenv": "8.2.0",
    "eslint": "7.20.0",
