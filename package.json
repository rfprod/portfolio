{
  "name": "portfolio",
  "version": "1.0.0",
  "private": true,
  "description": "Portfolio microapp",
  "repository": "https://github.com/rfprod/portfolio",
  "license": "MIT",
  "author": "rfprod",
  "scripts": {
    "analyze:app": "npm run ng:build:app:stats; npx webpack-bundle-analyzer ./dist/stats.json",
    "postinstall": "husky install && npx sort-package-json && npm run ngcc",
    "ng": "ng",
    "ng:build": "ng build",
    "ng:build:app:stats": "ng build --stats-json --configuration analyze-bundle",
    "ng:build:prod": "ng build --prod",
    "ng:e2e": "ng e2e",
    "ng:e2e:headless": "ng e2e --headless",
    "ng:e2e:headless:single-run": "ng e2e --headless --watch=false",
    "ng:lint": "ng lint",
    "ng:serve:dev": "ng serve --proxy-config proxy.conf.json",
    "ng:serve:prod": "ng serve --prod --proxy-config proxy.conf.prod.json",
    "ng:test": "ng test",
    "ng:test:single-run": "ng test --watch=false",
    "ngcc": "ngcc --tsconfig tsconfig.json",
    "precommit:lint": "ng lint; yarn prettier:html; yarn stylelint",
    "prettier:html": "npx prettier -c src/**/*.html",
    "prettier:html:fix": "npx prettier -c --write src/**/*.html",
    "start": "node server.js & npm run ng:serve:dev",
    "stylelint": "npx stylelint \"./src/**/*.scss\"",
    "stylelint:fix": "npx stylelint \"./src/**/*.scss\" --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit:lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "@angular/animations": "11.2.3",
    "@angular/cdk": "11.2.2",
    "@angular/common": "11.2.3",
    "@angular/compiler": "11.2.3",
    "@angular/core": "11.2.3",
    "@angular/flex-layout": "11.0.0-beta.33",
    "@angular/forms": "11.2.3",
    "@angular/material": "11.2.2",
    "@angular/material-moment-adapter": "11.2.2",
    "@angular/platform-browser": "11.2.3",
    "@angular/platform-browser-dynamic": "11.2.3",
    "@angular/router": "11.2.3",
    "@briebug/cypress-schematic": "4.4.0",
    "@ngneat/until-destroy": "8.0.4",
    "@ngxs/form-plugin": "3.7.1",
    "@ngxs/router-plugin": "3.7.1",
    "@ngxs/store": "3.7.1",
    "@types/core-js": "2.5.4",
    "@types/hammerjs": "2.0.39",
    "@types/node": "14.14.31",
    "core-js": "3.9.0",
    "firebase": "8.2.9",
    "firebase-tools": "9.5.0",
    "material-design-icon-fonts": "3.0.1",
    "moment": "2.29.1",
    "reflect-metadata": "0.1.13",
    "roboto-fontface": "0.10.0",
    "rxjs": "6.6.6",
    "typescript": "4.0.5",
    "zone.js": "0.11.4"
  },
  "devDependencies": {
    "@angular-builders/jest": "11.0.0",
    "@angular-devkit/build-angular": "0.1102.2",
    "@angular-eslint/builder": "1.2.0",
    "@angular-eslint/eslint-plugin": "1.2.0",
    "@angular-eslint/eslint-plugin-template": "1.2.0",
    "@angular-eslint/template-parser": "1.2.0",
    "@angular/cli": "11.2.2",
    "@angular/compiler-cli": "11.2.3",
    "@angular/language-service": "11.2.3",
    "@commitlint/cli": "12.0.0",
    "@commitlint/config-conventional": "12.0.0",
    "@cypress/webpack-preprocessor": "5.6.0",
